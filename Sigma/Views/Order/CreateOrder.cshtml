@model Sigma.Models.Order

@{
    ViewData["Title"] = "Order";
}

<h1>Order</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarId" class="control-label"></label>
                <input asp-for="CarId" class="form-control" />
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManagerId" class="control-label"></label>
                <input asp-for="ManagerId" class="form-control" />
                <span asp-validation-for="ManagerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartOfRent" class="control-label"></label>
                <input asp-for="StartOfRent" class="form-control" />
                <span asp-validation-for="StartOfRent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndOfRent" class="control-label"></label>
                <input asp-for="EndOfRent" class="form-control" />
                <span asp-validation-for="EndOfRent" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="PriceToPay" class="control-label"></label>
                <input asp-for="PriceToPay" class="form-control" />
                <span asp-validation-for="PriceToPay" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="ApplyOrder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SuccessOrder" asp-controller="Order" > Back to List</a>
</div>


